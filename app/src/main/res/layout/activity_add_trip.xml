<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_color"
    android:gravity="center_vertical"
    android:orientation="vertical"
    tools:context=".RegisterActivity"
    >

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnDeparture"
        android:layout_width="0dp"
        android:layout_height="48dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="24dp"
        android:background="@drawable/bg_white_box"
        android:text="@string/choose_departure"
        android:drawableLeft="@drawable/ic_baseline_departure_board_24"
        android:paddingStart="24dp"
        android:drawablePadding="-24dp"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"/>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnDestination"
        android:layout_width="0dp"
        android:layout_height="48dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="24dp"
        android:background="@drawable/bg_white_box"
        android:text="@string/choose_destination"
        android:drawableLeft="@drawable/ic_baseline_where_to_vote_24"
        android:paddingStart="20dp"
        android:textColor="@color/black"
        android:drawablePadding="-24dp"
        app:layout_constraintTop_toBottomOf="@id/btnDeparture"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnDate"
        android:layout_width="0dp"
        android:layout_height="48dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="24dp"
        android:background="@drawable/bg_white_box"
        android:text="@string/pick_date"
        android:drawableLeft="@drawable/ic_baseline_calendar_month_24"
        android:paddingStart="20dp"
        android:textColor="@color/black"
        android:drawablePadding="-24dp"
        app:layout_constraintTop_toBottomOf="@id/btnDestination"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnTime"
        android:layout_width="0dp"
        android:layout_height="48dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="24dp"
        android:textColor="@color/black"
        android:background="@drawable/bg_white_box"
        android:text="@string/choose_time"
        android:drawableLeft="@drawable/ic_baseline_access_time_24"
        android:paddingStart="20dp"
        android:drawablePadding="-24dp"
        app:layout_constraintTop_toBottomOf="@id/btnDate"/>


    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/bg_round_button"
        android:text="Next"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnTime" />

    <TextView
        android:id="@+id/testecalendar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="JUST TEST"
        android:layout_marginTop="100dp"
        app:layout_constraintTop_toBottomOf="@id/btnRegister"
        tools:ignore="MissingConstraints" />
    <TextView
        android:id="@+id/testeLat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/testecalendar"
        android:text="LAT"
        />
    <TextView
        android:id="@+id/testeLong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/testeLat"
        android:text="LONG"
        />
    <TextView
        android:id="@+id/ruatocoordinates"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/testeLong"
        android:text="LONG"
        />

</androidx.constraintlayout.widget.ConstraintLayout>